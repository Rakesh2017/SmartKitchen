<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwithoutsklogo"
    android:clickable="true"
    tools:context="com.example.dell.smartkitchen.HistorySmokeFrag">

    <!-- TODO: Update blank fragment layout -->

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="100dp"
         android:orientation="vertical"
         >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#d2aa31"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="last 2 minutes"
            android:id="@+id/last2minutes"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/btn_logut_bg"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:text="last 5 minutes"
            android:id="@+id/last5minutes"
            android:layout_weight="1"
            />


    </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:orientation="horizontal"
             android:weightSum="2"

             >
             <Button
                 android:layout_width="match_parent"
                 android:layout_height="35dp"
                 android:background="#9757b9"
                 android:layout_weight="1"
                 android:textColor="#000000"
                 android:text="last 1 hour"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 android:id="@+id/last1hour"
                 />




         </LinearLayout>







     </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/listviewhistorysmoke"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarFadeDuration="300"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="130dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Value"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="190dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leakage"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="285dp"
        />






</FrameLayout>
