<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="900dp"
    android:background="@drawable/backgroundwithoutsklogo"
    tools:context="com.example.dell.smartkitchen.SmokeSensorFrag">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="5"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="2dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="30dp"
        android:text="Smoke Sensor"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/smokesensorheading"
        android:background="#28af91"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/bg_main"
            android:src="@drawable/roundrect"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:text="Status"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/ss1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#e25b4a"
            android:layout_marginLeft="240dp"
            android:text="working..."
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/ss2"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/bg_main"
            android:textColor="#000000"
            android:layout_marginRight="90dp"
            android:text="Real_time Reading"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/ss3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#d2934b"
            android:layout_marginRight="240dp"
            android:text="nil"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/ss4"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/bg_main"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:text="ALARM "
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/ss5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ae5ada"
            android:layout_marginLeft="240dp"
            android:text="OFF"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/ss6"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/bg_main"
            android:textColor="#000000"
            android:layout_marginRight="90dp"
            android:text="Exhaust Fan"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/ss7"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5cac11"
            android:layout_marginRight="240dp"
            android:text="OFF"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/ss8"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/bg_main"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:text="Smoke/Lekeage "
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/ss9"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f44772"
            android:layout_marginLeft="240dp"
            android:text="NO !"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/ss10"
            />





    </LinearLayout>

    </ScrollView>

</FrameLayout>
