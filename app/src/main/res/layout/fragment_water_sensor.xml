<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:clickable="true"
    android:background="@drawable/backgroundwithoutsklogo"
    tools:context="com.example.dell.smartkitchen.WaterSensorFrag">

    <!-- TODO: Update blank fragment layout -->



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="5"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="1dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="30dp"
        android:text="Water Sensor"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/smokesensorheading"
        android:background="#28af91"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/bg_main"
        android:src="@drawable/roundrect"
        android:textColor="#000000"
        android:layout_marginLeft="90dp"
        android:text="Status"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/ws1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e25b4a"
        android:layout_marginLeft="240dp"
        android:text="working"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/ws2"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/bg_main"
        android:textColor="#000000"
        android:layout_marginRight="90dp"
        android:text="Real_time Reading"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/ws3"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#d2934b"
            android:layout_marginRight="240dp"
            android:text="nil"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/ws4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/bg_main"
            android:src="@drawable/roundrect"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:text="Conditions"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/ws5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#9a39d7"
            android:layout_marginLeft="240dp"
            android:text="normal"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/ws6"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="How it works?"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:background="#344cb4"
                android:id="@+id/wsb1"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Historical Data"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="#17a325"
                android:id="@+id/wsb2"
                />



        </LinearLayout>







    </LinearLayout>
    </ScrollView>


</FrameLayout>
