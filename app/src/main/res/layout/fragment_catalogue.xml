<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwithoutsklogo"
    tools:context="com.example.dell.smartkitchen.CatalogueFrag">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Catalogue List"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#fd3232"
        android:textStyle="bold"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">



    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Number of boxes deployed  : "
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:background="#b4842b"
        android:textColor="#000000"
        android:id="@+id/cl1"
        />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#b4842b"
                android:id="@+id/cl2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#2b5db4"
            android:layout_marginLeft="20dp"
            android:text="List"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/clspinner"
            android:scrollbars="vertical"
            android:background="@color/btn_logut_bg"
            ></Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Product Name"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/bg_login"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Quantity Left (in %)"
                    android:textSize="20dp"
                    android:background="#e46731"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#e46731"
                    android:layout_marginLeft="20dp"
                    />


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Expected Consumption Left (Days)"
                android:textSize="15dp"
                android:background="#e46731"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#e46731"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>







    </LinearLayout>


</FrameLayout>
