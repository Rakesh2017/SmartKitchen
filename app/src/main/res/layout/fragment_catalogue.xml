<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwithoutsklogo"
    android:clickable="true"
    tools:context="com.example.dell.smartkitchen.CatalogueFrag">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Catalogue"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#fd3232"
        android:textStyle="bold"
        android:textColor="#000000"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">



    <TextView
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Number of boxes deployed  : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#b4842b"
        android:textColor="#000000"
        android:id="@+id/cl1"
        />

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="#b4842b"
                android:id="@+id/cl2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:text="'?'" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="List"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/clspinner"
            android:scrollbars="vertical"

            ></Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Product Name"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="#ec1f1f"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:text="Quantity Left (in %) :"
                    android:textSize="20dp"
                    android:background="#e46731"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="#e46731"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="'?'"
                    />


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:text="Expected Consumption Left (Days) :"
                android:textSize="15dp"
                android:background="#e46731"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"

                />
            <TextView
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="#e46731"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:text="'?'"
                />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

         <Button
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="Schedule Market Visit"
             android:textColor="#000000"
             android:layout_weight="1"
             android:background="#ae1db3"
             android:id="@+id/marketvisit"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Configure"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="#2f8311"
            android:layout_marginLeft="10dp"
            />

                </LinearLayout>



    </LinearLayout>


</FrameLayout>
