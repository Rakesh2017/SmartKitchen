<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    android:clickable="true"
    tools:context="com.example.dell.smartkitchen.UserProfile">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ec1e25"
        android:text="PROFILE"
        android:textSize="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/image_icon"
        />




    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Name"
            android:textColor="#f20e0e"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="user"
            android:layout_marginLeft="60dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/profilename"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Contact"
            android:textColor="#ff0000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="xxxxxxxxxxx"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:phoneNumber="true"
            android:id="@+id/profilemail"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Contact"
            android:textColor="#ff0000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="xyz@gmail.com"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:phoneNumber="true"
            android:id="@+id/profilecontact"
            />

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:background="#ee333a"
        android:text="update"
        android:textSize="30dp"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/updatebtn"
        />

</FrameLayout>
